<div class="city">



<ol>
       {{#supporter}}

       {{#if url}}
       <li><a href="http://{{url}}">{{first_name}} {{last_name}}</a> {{age}} <a href="/supporters/{{city}}">{{city}}</a></li>
       {{else}}
       <li>{{first_name}} {{last_name}} {{age}} <a href="/{{city}}">{{city}}</a></li>
       {{/if}}



       {{/supporter}}
   </ol>

   <input type="hidden" name="_csrf" value="{{csrfToken}}">

<form class="gotopetition" action="/petition" method="get">
<button name="button">go back to the petition</button>

</form>
<form class="signout" action="/logout" method="get">
<button class="signout" name="button">signout</button>

</form>


</div>
